<%= stylesheet_link_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" %>
<div class="container-fluid">
	<%= form_for(@resume) do |f| %>
	  <% if @resume.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@resume.errors.count, "error") %> prohibited this resume from being saved:</h2>
	
	      <ul>
	      <% @resume.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	  <div class="field">
	    <%= f.label :objective %><br>
	    <%= f.text_area :objective %>
	  </div>
	  <div class="field">
	    <%= f.label :skills %><br>
	    <%= f.text_area :skills %>
	  </div>
	  <div class="field">
	    <%= f.label :experience %><br>
	    <%= f.text_area :experience %>
	  </div>
	  <div class="field">
	    <%= f.label :education %><br>
	    <%= f.text_area :education %>
	  </div>
	  <%= f.hidden_field :user_id, :value => session[:user_id] %>
	  <%= hidden_field_tag 'selected', 'none'  %>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>